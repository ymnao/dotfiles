# EditorConfig
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{lua,fish}]
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.py]
indent_size = 4
