# Public Git configuration
# Personal settings (user.name, user.email) should be in ~/.config/git/config.local

[core]
	editor = nvim
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	light = false
	side-by-side = true
	line-numbers = true
	syntax-theme = Kanagawa
	features = decorations

[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default

[pull]
	rebase = true

[rebase]
	autoStash = true
	autoSquash = true

[push]
	default = current
	autoSetupRemote = true

[init]
	defaultBranch = main

[color]
	ui = auto

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	unstage = reset HEAD --
	last = log -1 HEAD
	visual = log --graph --oneline --decorate --all

# Include local/private config (not tracked in git)
# Create ~/.config/git/config.local with:
# [user]
#     name = Your Name
#     email = your@email.com
[include]
	path = ~/.config/git/config.local
